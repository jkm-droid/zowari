@model Domain.Boundary.Requests.UserLoginRequest

@{
    ViewBag.Title = "Zowari | Login";
    Layout = "_Layout";
    var errors = ViewData["PageErrors"] as List<string>;
    var returnUrl = ViewData["ReturnUrl"];
}

<h2>Login</h2>
@await Html.PartialAsync("_ErrorPartial", errors).ConfigureAwait(false)
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Login" asp-controller="Account" asp-route-returnUrl="@returnUrl">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Username" class="control-label"></label>
                <input type="text" asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input type="password" asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            
            <div class="form-group mt-3">
                <input type="submit" value="Sign Me In" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
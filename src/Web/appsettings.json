{
  "AllowedHosts": "*",
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Error",
        "Microsoft.Hosting.Lifetime": "Information",
        "System": "Information",
        "Hangfire": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "./Logs/debug.log",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj}{NewLine:1}{Exception}",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 15,
          "fileSizeLimitBytes": 52428800,
          "buffered": true,
          "rollOnFileSizeLimit": true,
          "flushToDiskInterval": "00:00:05"
        }
      },
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "{Timestamp} [{Level}] {Message}{NewLine:1}"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithProcessId",
      "WithThreadId"
    ],
    "Properties": {
      "Application": "Zowari"
    }
  },
  "ConnectionStrings": {
    "postgresqlConnection": "Server=[];port=5432;user id = postgres;password = []; database=ZowariDb; pooling = true"
  },
  "EmailConfiguration": {
    "From": "zowari@gmail.com",
    "SmtpServer": "smtp.gmail.com",
    "Port": 465,
    "Username": "zowari@gmail.com",
    "Password": "zowari@!Pass"
  }
}
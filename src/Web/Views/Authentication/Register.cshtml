@model Core.Application.Boundary.Requests.Identity.UserRegistrationRequest

@{
    ViewBag.Title = "Register";
    Layout = "_Layout";
    var errors = ViewData["PageErrors"] as List<string>;
}

<div class="flex min-h-full items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
    <div class="w-full max-w-md space-y-8">
        <div>
            <img class="mx-auto h-12 w-auto" src="https://tailwindui.com/img/logos/mark.svg?color=indigo&shade=600" alt="Your Company">
            <h2 class="mt-6 text-center text-3xl font-bold tracking-tight text-gray-900">Create an account with us</h2>
            <p class="mt-2 text-center text-sm text-gray-600">
                <a href="#" class="font-medium text-indigo-600 hover:text-indigo-500">Welcome to Zowari</a>
            </p>
        </div>

        <div class="text-sm text-center text-red-600">
            @await Html.PartialAsync("_ErrorPartial", errors).ConfigureAwait(false)
        </div>

        <form class="mt-8 space-y-6" asp-action="Register" asp-controller="Authentication">
            <div class="-space-y-px rounded-md shadow-sm">
                <div>
                    <label asp-for="Username" class="sr-only">Username</label>
                    <input asp-for="Username" name="Username" type="text" autocomplete="username" required
                           class="relative block w-full rounded border-2 py-1.5 text-gray-900 ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:z-10 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" placeholder="Username">
                </div>
                <span asp-validation-for="Username" class="text-sm text-red-600"></span>
            </div>

            <div class="-space-y-px rounded-md shadow-sm">
                <div>
                    <label asp-for="Email" class="sr-only">Email Address</label>
                    <input asp-for="Email" name="Email" type="email" autocomplete="email" required
                           class="relative block w-full rounded border-2 py-1.5 text-gray-900 ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:z-10 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" placeholder="Email address">
                </div>
                <span asp-validation-for="Email" class="text-sm text-red-600"></span>
            </div>

            <div class="-space-y-px rounded-md shadow-sm">
                <div>
                    <label asp-for="Password" class="sr-only">Password</label>
                    <input asp-for="Password" type="password" autocomplete="current-password" required
                           class="relative block w-full rounded border-2 py-1.5 text-gray-900 ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:z-10 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" placeholder="Password">
                </div>
                <span asp-validation-for="Password" class="text-sm text-red-600"></span>
            </div>

            <div class="-space-y-px rounded-md shadow-sm">
                <div>
                    <label asp-for="ConfirmPassword" class="sr-only">Confirm Password</label>
                    <input asp-for="ConfirmPassword" type="password" autocomplete="current-password" required
                           class="relative block w-full rounded py-1.5 text-gray-900 ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:z-10 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" placeholder="Password">
                </div>
                <span asp-validation-for="ConfirmPassword" class="text-sm text-red-600"></span>
            </div>

            <div class="flex items-center justify-between">
                <div class="flex items-center">
                    <input id="remember-me" name="remember-me" type="checkbox" class="h-4 w-4 rounded border-gray-300 text-indigo-600 focus:ring-indigo-600">
                    <label for="remember-me" class="ml-2 block text-sm text-gray-900">Agree to terms </label>
                </div>

                <div class="text-sm">
                    <a asp-controller="Authentication" asp-action="Login" class="font-medium text-indigo-600 hover:text-indigo-500">Already a member? Sign in</a>
                </div>
            </div>

            <div>
                <button type="submit" class="group relative flex w-full justify-center rounded-md bg-indigo-600 py-2 px-3 text-sm font-semibold text-white hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">
                    <span class="absolute inset-y-0 left-0 flex items-center pl-3">
                        <svg class="h-5 w-5 text-indigo-500 group-hover:text-indigo-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                            <path fill-rule="evenodd" d="M10 1a4.5 4.5 0 00-4.5 4.5V9H5a2 2 0 00-2 2v6a2 2 0 002 2h10a2 2 0 002-2v-6a2 2 0 00-2-2h-.5V5.5A4.5 4.5 0 0010 1zm3 8V5.5a3 3 0 10-6 0V9h6z" clip-rule="evenodd"/>
                        </svg>
                    </span>
                    Sign in
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
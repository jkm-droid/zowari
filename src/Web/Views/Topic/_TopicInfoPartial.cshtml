@model Zowari.Models.ViewModels.TopicMessageViewModel
@{
    var topic = Model.TopicResponse;
}

<div class="p-5 bg-white">
    <button class="mr-2 float-left max-w-xs rounded-full flex items-center text-sm focus:outline-none relative">
        <img class="h-12 w-12 rounded-full border border-indigo-600" src="images/profile_images/rick_and_morty.jpg" alt="avatar"/>
        <span class='absolute top-0 left-3 h-3 w-3 rounded-full bg-green-500 ring ring-white'></span>
    </button>
    <div class="grid grid-cols-1 sm:grid-cols-1 md:grid-cols-1 lg:grid-cols-1 xl:grid-cols-1">
        <div class="rounded overflow-hidden">
            <div class="px-6 py-4">
                <div class="w-full grid grid-cols-2 mb-2 gap-2">
                    <span class="col-start-1 col-end-4 justify-start items-start text-sm text-gray-400">@topic.AuthorResponse.AuthorName</span>
                    <span class="col-start-4 col-end-6 justify-end items-end text-sm text-gray-400">@topic.CreatedOn</span>
                </div>
                <p class="text-gray-700 text-base font-medium font-semibold w-full">
                    @topic.Title
                </p>
                <div class="px-6 pt-4 pb-2">
                    <span class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2 mb-2">#photography</span>
                    <span class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2 mb-2">#travel</span>
                    <span class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2 mb-2">#winter</span>
                </div>
                <hr class="w-full mt-2 mb-2"/>
                <p class="text-gray-700 text-base w-full mt-2">
                    @topic.Body
                </p>
            </div>
        </div>
    </div>
</div>